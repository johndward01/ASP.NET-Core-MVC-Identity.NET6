@using Microsoft.AspNetCore.Identity
@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASP.NET_Core_MVC_Identity.NET6</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASP.NET_Core_MVC_Identity.NET6.styles.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/7160ed62e4.js" crossorigin="anonymous"></script>
</head>
<body class="container-fluid h-100">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container-fluid">
                <a asp-controller="Home" asp-action="Index"><img src="~/imgs/mvc-logo.png" /></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
                    <ul class="navbar-nav flex-grow-1">
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fa-solid fa-house"></i>
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="fa-solid fa-key"></i>
                                    Privacy
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">
                                    <i class="fas fa-shopping-bag"></i>
                                    Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Giphy" asp-action="Index">
                                    <i class="fa-solid fa-image"></i>
                                    Giphy
                                </a>
                            </li>
                            <li class="nav-item me-auto">
                                <a class="nav-link" asp-area="" asp-controller="OpenWeatherMap" asp-action="Index">
                                    <i class="fas fa-cloud-sun-rain"></i>
                                    Weather
                                </a>
                            </li>
                            @if (User.IsInRole("admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="User" asp-action="Index">
                                        <i class="fa-solid fa-users"></i>
                                        Users
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link " asp-controller="Role" asp-action="Index">
                                        <i class="fa-solid fa-users-between-lines"></i>
                                        Roles
                                    </a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-success" asp-controller="Home" asp-action="Index">
                                    <i class="fa-solid fa-user"></i> &nbsp; @UserManager.GetUserName(User)
                                </a>
                            </li>
                            <li class="nav-item">
                                <form id="logoutForm" method="post" class="form-inline" asp-controller="Account" asp-action="LogOff">
                                    <button type="submit" class="btn btn-outline-danger">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item ms-3">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="fa-solid fa-house"></i> 
                                    Home
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="fa-solid fa-key"></i> 
                                    Privacy
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Product" asp-action="Index">
                                    <i class="fas fa-shopping-bag"></i> 
                                    Products
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" title="Giphy API Demo" asp-controller="Giphy" asp-action="Index">
                                    <i class="fa-solid fa-image"></i>
                                    Giphy
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="OpenWeatherMap" asp-action="Index">
                                    <i class="fas fa-cloud-sun-rain"></i> 
                                    Weather
                                </a>
                            </li>
                            <li class="nav-item me-auto">
                                <a class="nav-link" asp-area="" asp-controller="ThreeJS" asp-action="Index">
                                    <i class="fa-brands fa-js"></i> 
                                    Three
                                </a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fa-solid fa-right-to-bracket"></i> 
                                    Login
                                </a>
                            </li>
                            <li>
                                <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="fa-solid fa-user-plus"></i> 
                                    Register
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
