@using ASP.NET_Core_Identity_Demo.GiphyAPI
@using System.Linq

@model GiphyAPI_Root

<style>
    .main {
        color: white;
        max-width: 100%;
    }
</style>


@{
    int index = 0;
}

<div class="container">
    <h1 class="display-4 center">Giphy API Demo: Cat memes</h1>
    
    @for(int i = 0; i < Model.data.Count; i++)
    {        
        <div class="row">
            <div class="col m-2">
                <img src="@Model.data[index].Images.fixed_height.url" />
            </div>
            <div class="col m-2">
                <img src="@Model.data[++index].Images.fixed_height.url" />
            </div>   
            <div class="col m-2">
                <img src="@Model.data[++index].Images.fixed_height.url" />
            </div> 
        </div>

        index++;

        @if (index == Model.data.Count - 1)
        {
            break;
        }
    }
</div>

